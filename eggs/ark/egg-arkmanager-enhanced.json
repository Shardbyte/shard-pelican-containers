    "scripts": {
        "installation": {
            "script": "#!/bin/bash\r\n#################################################\r\n# Copyright (c) Shardbyte. All Rights Reserved. #\r\n# SPDX-License-Identifier: MIT                  #\r\n#################################################\r\n# ARK Server Preparation Script\r\n# Server Files: /mnt/server\r\n# Image to install with is 'ghcr.io/shardbyte/installers:debian'\r\n# \r\n# This script only prepares the directory structure.\r\n# The actual ARK server installation is handled by arkmanager\r\n# during container startup for better reliability and integration.\r\n\r\necho \"Preparing ARK server directory structure...\"\r\n\r\n# Create basic directory structure\r\nmkdir -p /mnt/server/.arkmanager/bin\r\nmkdir -p /mnt/server/.arkmanager/config\r\nmkdir -p /mnt/server/.arkmanager/libexec\r\nmkdir -p /mnt/server/.arkmanager/data\r\nmkdir -p /mnt/server/logs\r\nmkdir -p /mnt/server/backup\r\nmkdir -p /mnt/server/staging\r\n\r\n# Install SteamCMD for arkmanager to use\r\necho \"Installing SteamCMD for arkmanager...\"\r\ncd /tmp\r\nmkdir -p /mnt/server/steamcmd\r\ncurl -sSL -o steamcmd.tar.gz https://steamcdn-a.akamaihd.net/client/installer/steamcmd_linux.tar.gz\r\ntar -xzvf steamcmd.tar.gz -C /mnt/server/steamcmd\r\n\r\n# Create Steam SDK directories for ARK\r\nmkdir -p /mnt/server/.steam/sdk32\r\nmkdir -p /mnt/server/.steam/sdk64\r\ncp -v /mnt/server/steamcmd/linux32/steamclient.so /mnt/server/.steam/sdk32/steamclient.so 2>/dev/null || true\r\ncp -v /mnt/server/steamcmd/linux64/steamclient.so /mnt/server/.steam/sdk64/steamclient.so 2>/dev/null || true\r\n\r\n# Set proper ownership\r\nchown -R root:root /mnt/server\r\n\r\necho \"-----------------------------------------\"\r\necho \"Directory structure prepared.\"\r\necho \"ARK server will be installed by arkmanager on first startup.\"\r\necho \"-----------------------------------------\"",
            "container": "ghcr.io/shardbyte/installers:debian",
            "entrypoint": "bash"
        }
    },
