{
    "_comment": "Pelican Panel Egg for ARK: Survival Evolved",
    "meta": {
        "version": "PTDL_v2",
        "update_url": null
    },
    "exported_at": "2025-07-17T12:00:00+00:00",
    "name": "ARK: Survival Evolved",
    "author": "containers@shardbyte.com",
    "description": "ARK: Survival Evolved dedicated server with arkmanager for automated server management and mod support.",
    "features": [
        "steam_disk_space"
    ],
    "docker_images": {
        "ghcr.io/shardbyte/pelican-ark": "ghcr.io/shardbyte/pelican-ark:latest"
    },
    "file_denylist": [],
    "startup": "/entrypoint.sh",
    "config": {
        "files": "{\r\n    \"arkserver/ShooterGame/Saved/Config/LinuxServer/GameUserSettings.ini\": {\r\n        \"parser\": \"ini\",\r\n        \"find\": {\r\n            \"SessionName\": \"{{server.build.env.ARK_SESSION_NAME}}\",\r\n            \"ServerPassword\": \"{{server.build.env.ARK_SERVER_PASSWORD}}\",\r\n            \"ServerAdminPassword\": \"{{server.build.env.ARK_ADMIN_PASSWORD}}\",\r\n            \"MaxPlayers\": \"{{server.build.env.ARK_MAX_PLAYERS}}\",\r\n            \"ServerPVE\": \"{{server.build.env.ARK_SERVER_PVE}}\",\r\n            \"ServerCrosshair\": \"true\",\r\n            \"ServerMapPlayerLocation\": \"true\",\r\n            \"ServerHardcore\": \"false\",\r\n            \"GlobalVoiceChat\": \"false\",\r\n            \"ProximityChat\": \"false\",\r\n            \"NoTributeDownloads\": \"false\",\r\n            \"AllowThirdPersonPlayer\": \"true\",\r\n            \"AlwaysNotifyPlayerLeft\": \"true\",\r\n            \"DontAlwaysNotifyPlayerJoined\": \"false\",\r\n            \"ShowMapPlayerLocation\": \"true\",\r\n            \"EnablePVPGamma\": \"true\",\r\n            \"DisableStructureDecayPvE\": \"false\"\r\n        }\r\n    }\r\n}",
        "startup": "{\r\n    \"done\": \"Waiting for players\"\r\n}",
        "logs": "{}",
        "stop": "^C"
    },
    "scripts": {
        "installation": {
            "script": "#!/bin/bash\n\n# ARK Server Installation Script for Pelican Panel\n\napt update\napt install -y curl wget\n\n# Create necessary directories\nmkdir -p /mnt/server\ncd /mnt/server\n\n# The entrypoint script will handle server installation\necho \"ARK server will be installed on first startup\"\necho \"Installation directory prepared: /mnt/server\"",
            "container": "ghcr.io/parkervcp/installers:debian",
            "entrypoint": "bash"
        }
    },
    "variables": [
        {
            "name": "ARK Server Map",
            "description": "The map for the server to load on startup.",
            "env_variable": "ARK_SERVER_MAP",
            "default_value": "TheIsland",
            "user_viewable": true,
            "user_editable": true,
            "rules": "required|string|max:50",
            "field_type": "text"
        },
        {
            "name": "Session Name",
            "description": "The name of the server as it appears in the server browser.",
            "env_variable": "ARK_SESSION_NAME",
            "default_value": "ARK Server",
            "user_viewable": true,
            "user_editable": true,
            "rules": "required|string|max:100",
            "field_type": "text"
        },
        {
            "name": "Max Players",
            "description": "Maximum number of players that can connect to the server.",
            "env_variable": "ARK_MAX_PLAYERS",
            "default_value": "70",
            "user_viewable": true,
            "user_editable": true,
            "rules": "required|integer|between:1,100",
            "field_type": "text"
        },
        {
            "name": "Server Password",
            "description": "Password required to join the server (leave blank for no password).",
            "env_variable": "ARK_SERVER_PASSWORD",
            "default_value": "",
            "user_viewable": true,
            "user_editable": true,
            "rules": "nullable|string|max:50",
            "field_type": "text"
        },
        {
            "name": "Admin Password",
            "description": "Password for admin/RCON access to the server.",
            "env_variable": "ARK_ADMIN_PASSWORD",
            "default_value": "changeme",
            "user_viewable": true,
            "user_editable": true,
            "rules": "required|string|min:5|max:50",
            "field_type": "text"
        },
        {
            "name": "PvE Mode",
            "description": "Enable PvE (Player vs Environment) mode instead of PvP.",
            "env_variable": "ARK_SERVER_PVE",
            "default_value": "false",
            "user_viewable": true,
            "user_editable": true,
            "rules": "required|string|in:true,false",
            "field_type": "text"
        },
        {
            "name": "Mod IDs",
            "description": "Comma-separated list of Steam Workshop mod IDs to install.",
            "env_variable": "ARK_MOD_IDS",
            "default_value": "",
            "user_viewable": true,
            "user_editable": true,
            "rules": "nullable|string",
            "field_type": "text"
        },
        {
            "name": "Enable Crossplay",
            "description": "Enable crossplay with Epic Games Store players.",
            "env_variable": "ARK_ENABLE_CROSSPLAY",
            "default_value": "false",
            "user_viewable": true,
            "user_editable": true,
            "rules": "required|string|in:true,false",
            "field_type": "text"
        },
        {
            "name": "Disable BattlEye",
            "description": "Disable BattlEye anti-cheat system.",
            "env_variable": "ARK_DISABLE_BATTLEYE",
            "default_value": "false",
            "user_viewable": true,
            "user_editable": true,
            "rules": "required|string|in:true,false",
            "field_type": "text"
        },
        {
            "name": "Update on Start",
            "description": "Update the server on startup.",
            "env_variable": "UPDATE_ON_START",
            "default_value": "false",
            "user_viewable": true,
            "user_editable": true,
            "rules": "required|string|in:true,false",
            "field_type": "text"
        },
        {
            "name": "Extra Arguments",
            "description": "Additional command line arguments to pass to the server.",
            "env_variable": "ARK_EXTRA_ARGS",
            "default_value": "",
            "user_viewable": true,
            "user_editable": true,
            "rules": "nullable|string",
            "field_type": "text"
        },
        {
            "name": "RCON Port",
            "description": "Port for RCON remote administration.",
            "env_variable": "ARK_RCON_PORT",
            "default_value": "27020",
            "user_viewable": true,
            "user_editable": false,
            "rules": "required|integer|between:1024,65535",
            "field_type": "text"
        },
        {
            "name": "Query Port",
            "description": "Port for server queries (server browser).",
            "env_variable": "QUERY_PORT",
            "default_value": "27015",
            "user_viewable": true,
            "user_editable": false,
            "rules": "required|integer|between:1024,65535",
            "field_type": "text"
        },
        {
            "name": "Raw UDP Port",
            "description": "Raw UDP socket port for game communication.",
            "env_variable": "RAW_UDP_PORT",
            "default_value": "7778",
            "user_viewable": true,
            "user_editable": false,
            "rules": "required|integer|between:1024,65535",
            "field_type": "text"
        }
    ]
}
